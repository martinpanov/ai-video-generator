// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum PipelineType {
  VIDEO_SOCIAL_MEDIA
  VIDEO_SOCIAL_MEDIA_ZOOM_FACE
  VIDEO_SOCIAL_MEDIA_CROP
  VIDEO_SOCIAL_MEDIA_CAPTION
  VIDEO_SOCIAL_MEDIA_CAPTION_ZOOM_FACE
  VIDEO_SOCIAL_MEDIA_CAPTION_CROP
  DIRECT
  DIRECT_ZOOM_FACE
  DIRECT_CROP
  DIRECT_CAPTION
  DIRECT_CAPTION_ZOOM_FACE
  DIRECT_CAPTION_CROP
}

model User {
  id       String  @id @default(cuid())
  username String  @unique
  password String
  jobs     Job[]
  clips    Clip[]
  videos   Video[]
  todos    Todos[]
}

model Video {
  id          String   @id @default(cuid())
  videoUrl    String // Downloaded/processed video URL
  videoWidth  Int
  videoHeight Int
  srtUrl      String? // SRT subtitle file URL
  textUrl     String? // Plain text transcript URL
  segmentsUrl String? // Segments JSON URL
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  job         Job      @relation(fields: [jobId], references: [id])
  jobId       String   @unique
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

model Job {
  id             String       @id @default(cuid())
  pipelineType   PipelineType
  status         String // 'pending', 'processing', 'completed', 'failed'
  currentStep    String // 'download', 'metadata', 'transcribe', 'translate', 'compress'
  completedSteps String       @default("[]") // JSON array of completed step names: ["download", "metadata"]
  formData       String       @default("{}") // User input: { videoUrl, videosAmount, videoDuration }
  failedStep     String? // Step that failed (if status is 'failed')
  errorMessage   String? // Error message if failed
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  user           User         @relation(fields: [userId], references: [id])
  userId         String
  clips          Clip[]
  video          Video?
}

model Clip {
  id               String   @id @default(cuid())
  title            String
  description      String
  post             String
  clip             String // AI-generated clip text
  timeStart        String
  timeEnd          String
  originalVideoUrl String
  clipUrl          String?
  thumbnailUrl     String?
  status           String // 'pending', 'processing', 'completed', 'failed'
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  job              Job      @relation(fields: [jobId], references: [id])
  jobId            String
  user             User     @relation(fields: [userId], references: [id])
  userId           String
}

model Todos {
  id        String   @id @default(cuid())
  todo      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}
