// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum PipelineType {
  youtube
  direct
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
  jobs     Job[]
  clips    Clip[]
}

model Job {
  id             String       @id @default(cuid())
  pipelineType   PipelineType // 'youtube' or 'direct'
  status         String // 'processing', 'completed', 'failed'
  currentStep    String // 'download', 'metadata', 'transcribe', 'translate', 'compress'
  completedSteps String       @default("[]") // JSON array of completed step names: ["download", "metadata"]
  stepData       String       @default("{}") // JSON object with all step data: { download: {...}, metadata: {...} }
  formData       String       @default("{}") // User input: { videoUrl, videosAmount, videoDuration }
  failedStep     String? // Step that failed (if status is 'failed')
  errorMessage   String? // Error message if failed
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  user           User?        @relation(fields: [userId], references: [id])
  userId         String?
  clips          Clip[]
}

model Clip {
  id           String   @id @default(cuid())
  title        String
  description  String
  post         String
  clip         String // AI-generated clip text
  timeStart    String
  timeEnd      String
  clipUrl      String?
  thumbnailUrl String?
  finalClipUrl String
  status       String // 'pending', 'processing', 'completed'
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  job          Job      @relation(fields: [jobId], references: [id])
  jobId        String
  user         User?    @relation(fields: [userId], references: [id])
  userId       String?
}
